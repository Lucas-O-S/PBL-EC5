@model SitePBL.Models.FuncionarioViewModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/cadFunc.css">

</head>

<main class="content-container">
    <form class="form-container row container" method="post" enctype="multipart/form-data" action="Enviar">
        <section class="left-section col">
            <p>Cadastro de</p>
            <h1><strong>Funcionário</strong></h1>

            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <input type="submit" class="btn btn-primary" role="button" name="btnEnviar" value="Enviar" />
        </section>

        <section class="right-section col row">

                <div class="input-group-sm mb-3 col">
                    <br />
                    <input type="hidden" name="id" value="@Model.id" />
                    <label class="control-label">Nome</label>
                    <input asp-for="nome" class="form-control" maxlength="500" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                    <label class="control-label">Cargo</label>
                    <input asp-for="cargo" class="form-control" maxlength="500">
                    <span asp-validation-for="cargo" class="text-danger"></span>
                </div>
                <section class="file-section col">
                    <label for="foto-upload">Foto</label>
                    <br>
                    <div class="upload-container">
                        <label for="foto-upload" class="custom-button"><i class="fas fa-plus"></i></label>
                        <input type="file" id="foto-upload" name="foto-upload" value="@Model.foto" accept=".jpg,.jpeg,.png">
                        <p class="texto-upload">Faça o upload do arquivo</p>
                    </div>
                </section>
    </form>


</main>
