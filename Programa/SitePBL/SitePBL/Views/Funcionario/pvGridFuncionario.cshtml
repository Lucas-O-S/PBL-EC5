<main class="container">
    <div class=" row titulo" titulo>Lista de Funcionario</div>
    <br />
    <div class=" row main-section">
        <table class="table table-responsive">
            <tr>
                <th>Ações</th>
                <th>ID</th>
                <th>Nome</th>
                <th>Cargo</th>
                <th>Foto</th>

            </tr>

            @foreach (var funcionario in Model)
            {
                <tr>
                    <td>
                        <a href="/funcionario/edit?id=@funcionario.id" role="button" class="btn btn-primary">Editar</a>
                        &nbsp;&nbsp;
                        <a href="javascript:apagar(@funcionario.id)" role="button" class="btn btn-danger">Excluir</a>
                    </td>
                    <td>@funcionario.id</td>
                    <td>@funcionario.nome</td>
                    <td>@funcionario.cargo</td>
                    <td>
                        <img src="data:image/png;base64,@funcionario.foto64" alt="Foto" style="width: 50px; height: 50px;" />
                    </td>

                </tr>
            }
        </table>
    </div>
</main>
